<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/hotel_location"
            android:layout_below="@id/hotel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ayypanthangal"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="10dp"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotel XYZ"
            android:drawableLeft="@drawable/ic_baseline_location_city_24"
            android:drawablePadding="10dp"
            android:id="@+id/hotel_name"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9.30 pm to 10.00 pm"
            android:drawableLeft="@drawable/ic_baseline_access_time_24"
            android:drawablePadding="10dp"
            android:id="@+id/hotel_time"
            android:textSize="15sp"
            android:layout_below="@+id/hotel_location"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Free Meal"
            android:drawableLeft="@drawable/ic_baseline_access_time_24"
            android:drawablePadding="10dp"
            android:id="@+id/meal_type"
            android:textSize="15sp"
            android:layout_below="@+id/hotel_time"
            android:layout_marginTop="5dp"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"
            />
    </RelativeLayout>





</RelativeLayout>